                 {{#each usuarios}}
<form action="/perfil/perfil_editar/{{user.id_cliente}}" method="POST">
    <div class="nombre_Quitus">
        <h3 class="nombre_Quitus_h3">Actualiza tu perfil</h3>
        <p class="nombre_Quitus_p">¡Y vamos a Ciclear!</p>
      </div>
      <div class="indicaciones_Registro">
        <p class="indicaciones_Registro_p">Ingresa datos reales<br />
          Los datos con * son obligatorios</p>
      </div>
      <div class="formulario_datos_basicos">
        <div class="formulario_datos_basicos_11">
          <div class="formulario_datos_basicos_1">

            <input
              type="text"
              name="nombreCompleto_cliente"
              id="nombreCompleto_cliente"
              placeholder="*Ingresa tus dos nombres y dos apellidos"
              class="input"
              value="{{nombreCompleto_cliente}}"
              style="color:burlywood ;"
            />
            <div class="">
              <input
                type="text"
                name="username"
                id="username"
                placeholder="*Ingrese su apodo"
                class="input"
                value="{{username_cliente}}"
                 style="color:burlywood ;"
              />
              <input type="text" name="celular_cliente" id="celular_cliente" placeholder="Número Celular" class="input">
            </div>
            <div>
              <input
                type="text"
                name="correo_cliente"
                id="correo_cliente"
                placeholder="Correo Electrónico"
                class="input"
                value="{{correo_cliente}}"
                 style="color:burlywood ;"
              />
            </div>
            <div class="contrasenias">
              <input
                type="password"
                name="password"
                id="password"
                placeholder="*Actualize contraseña"
                class="input"
              />
            </div>
          </div>
          <div class="Registro_foto">
            <input
              style="display:none"
              type="file"
              name="foto_cliente"
              id="foto_cliente"
            />
            <p class="Registro_foto_p">Sube tu foto</p>
            <img src="/IMG/cliente/{{imagen_cliente}}" id="Registro_foto_img" />
            <input type="file" name="foto_cliente" id="foto_cliente" />
          </div>
