<link rel="stylesheet" href="/CSS/grupos.css" />

<form class="agregar" action="/grupos/agregar/{{user.id_cliente}}" method="post">
  <div class="contenedor-agregar">
    <div class="titulo-agregar"><b>Nuevo grupo</b></div>
    <div class="inputs" id="contenido">
      <div class="input" id="nombre">
        <label class="label-nombre">Nombre de grupo</label>
        <input
          class="input"
          type="text"
          name="nombre_grupo"
          id="nombre_grupo"
          checked
          aria-checked="true"
        />
      </div>
      <div class="input" id="integrantes">
        <label class="label-nombre">Integrantes</label>
        <input
          class=""
          type="text"
          name="integrantes_detalleGrupo"
          id="nombre_grupo"
          checked
          aria-checked="true"
        />
      </div>
           <div class="input" id="rutas">
        <label class="label-nombre">Rutas</label>
        <input
          class=""
          type="text"
          name="rutas_grupo"
          id="nombre_grupo"
          checked
          aria-checked="true"
        />
      </div>
      <div class="input" id="tipoCiclismo">
        <label class="label-nombre">Tipo de ciclismo</label>
        <input type="text" name="nombre_tipoCiclismo" id="">
      </div>
      <div class="input" id="descripcion">
        <label class="label-nombre">Descripcion</label>
        <textarea name="descripcion_grupo"></textarea>
      </div>
    </div>
    <div class="contenedor-imagen">
        <div class="imagen">
       <input type="file" name="foto_grupo" id="">
       </div>
    </div>
    <div id="guardar">
      <button class="boton" type="submit"><b>Guardar</b></button>
    </div>
            <div>
          <a href="/grupos/listar/{{user.id_cliente}}">Regresar</a>
        </div>
  </div>
</form>