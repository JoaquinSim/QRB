<link rel="stylesheet" href="/CSS/grupos.css">

<form action="/grupos/agregar/{{user.id_cliente}}" method="post">
   <div class="fondo">
    <div class="contenido contenido--small">
        <div class="titulo"><b>Nuevo grupo</b></div><br>
        <div class="conten" id="contenido">
            <div class="contenido__nombre" id="nombre">
                <label class="label-nombre">Nombre de grupo</label>
